
#include <Wire.h>
#include "Adafruit_LEDBackpack.h"          
#include "Adafruit_GFX.h"

Adafruit_7segment matrix[3] = Adafruit_7segment();
void setup() 
{
#ifndef __AVR_ATtiny85__
  Serial.begin(9600);
  Serial.println("7 Segment Backpack Test");
#endif
  matrix[0].begin(0x70);
}
void loop()
{
  matrix[0].clear();
  matrix[0].writeDisplay();
  delay(2000);

  int num,counter;
  counter = num/1000*129600 + num%1000/100*21600 + num%100*3600 + num%10*60;
  for(counter ; counter>0 ; counter-=1){
    matrix[0].print(num);
    matrix[0].writeDisplay();
    delay(1000);
    num = counter/129600*1000 + counter%129600/21600*100 + counter%21600/3600*10 + counter%3600/60;
  }
}
